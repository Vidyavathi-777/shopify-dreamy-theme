<div class="header-shipping-bar">
  <div class="container">
    {{ section.settings.shipping_text }}
  </div>
</div>
<style>
  .header-shipping-bar {
    background-color: {{ section.settings.bg-color }};
    color: {{ section.settings.text-color }};
    text-align: center;
    padding: 10px ;
    font-size: 14px;
  }
</style>

{% schema %}
{
  "name": "Shipping Bar",
  "settings": [
    {
      "type": "text",
      "id": "shipping_text",
      "label": "Title",
      "default": "Free shipping on all orders"
    },
    {
      "type": "color",
      "id":"bg-color",
      "label":"Background Color",
      "default":"#0c2f30"
    },
    {
      "type": "color",
      "id":"text-color",
      "label":"Text Color",
      "default":"#ffffff"
    }
  ]
}
{% endschema %}
